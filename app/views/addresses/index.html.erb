<h1>Listing addresses for <%= @person.name %></h1>
 
<table>
  <tr>
    <th>Street address</th>
    <th>City</th>
    <th>State</th>
    <th>Zipcode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
 
  <% @addresses.each do |address| %>
    <tr>
      <td><%= address.street_address %></td>
      <td><%= address.city %></td>
      <td><%= address.state %></td>
      <td><%= address.zipcode %></td>
      <td><%= link_to "show", person_address_path(@person, address) %></td>
      <td><%= link_to "edit", edit_person_address_path(@person, address) %></td>
      <td><%= link_to "delete", person_address_path(@person, address), method: :delete, data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to "New Address", new_person_address_path(@person) %>